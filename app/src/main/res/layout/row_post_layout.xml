<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="post"
            type="com.justclean.android.domain.Post"/>
        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@android:color/white"
        android:tag='@{post}'
        android:onClick='@{(view)->listener.onClick(view)}'>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{post.title}"
            tools:text="Farhan"
            android:textSize="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/leftGuide"
            app:layout_constraintEnd_toStartOf="@id/favIv"
            app:layout_constraintTop_toTopOf="@id/topGuide"

            />

        <TextView
            android:id="@+id/bodyTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="@id/leftGuide"
            app:layout_constraintEnd_toEndOf="@id/titleTv"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            app:layout_constraintBottom_toBottomOf="@id/bottomGuide"
            android:text="@{post.body}"
            tools:text="Mohd Farhan, Dubain, UAE"
            android:textColor="@color/grey"
            android:textSize="@dimen/_9ssp"/>

        <ImageView
            android:id="@+id/favIv"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="@id/topGuide"
            app:layout_constraintBottom_toBottomOf="@id/bottomGuide"
            app:layout_constraintEnd_toEndOf="@id/rightGuide"
            android:src="@drawable/ic_red_heart"
            android:tag='@{post}'
            android:onClick='@{(view)->listener.onClick(view)}'/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_10sdp"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_10sdp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_10sdp"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/_10sdp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>